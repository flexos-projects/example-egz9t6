<BaseLayout title={title} description={description}>
    
  <!-- Split Hero for Story Section (Pattern 2.2) -->
  <section class="py-20 md:py-28 lg:py-36 bg-surface-50 overflow-hidden">
    <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12 grid md:grid-cols-2 items-center gap-12 md:gap-16">
      <div class="animate-on-scroll">
        <h1 class="font-inter text-4xl md:text-5xl font-semibold leading-tight text-primary-700 mb-6">
          The Experts Behind the Innovation.
        </h1>
        <div class="prose prose-lg prose-p:font-lora prose-p:text-surface-900 prose-p:leading-relaxed max-w-none">
            <p>
                InnovationHub was born from a simple observation: the most successful Bavarian businesses deserved a technology partner as rigorous and reliable as they are. Our founder, Dr. Anna Müller, saw a gap between impersonal global consultancies and unstructured freelancers.
            </p>
            <p>
                We built this firm to fill that gap—delivering world-class technical expertise with the dedicated partnership of a local team. We believe technology should be an asset, not a burden, and our mission is to translate complex digital challenges into clear, actionable strategies that drive sustainable growth.
            </p>
        </div>
      </div>
      <div class="relative md:order-last animate-on-scroll" style="--delay: 200ms;">
        <Image 
          src="https://images.unsplash.com/photo-1542744173-8e7e53415bb0?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
          alt="A professional team collaborating in a modern Munich office"
          width={800}
          height={1000}
          class="h-96 md:h-[450px] lg:h-[550px] w-full object-cover rounded-sm shadow-lg"
        />
      </div>
    </div>
  </section>

  <!-- Leadership Team Grid -->
  <section class="py-24 md:py-32 bg-surface-100">
    <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
        <div class="max-w-3xl mx-auto text-center animate-on-scroll">
            <h2 class="font-inter text-3xl md:text-4xl font-semibold text-primary-700">Meet Our Leadership</h2>
            <p class="mt-4 font-lora text-lg md:text-xl text-surface-900">A dedicated team of strategists and engineers committed to your success.</p>
        </div>
        <div class="mt-20 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16">
            {teamMembers.map((member, index) => (
                <div class="flex flex-col text-center items-center animate-on-scroll" style={`--delay: ${index * 150}ms;`}>
                    <div class="relative h-40 w-40">
                        <Image
                            src={member.data.photo}
                            alt={`Professional portrait of ${member.data.name}`}
                            width={160}
                            height={160}
                            class="rounded-full object-cover h-40 w-40 shadow-lg"
                        />
                    </div>
                    <div class="mt-6">
                        <h3 class="font-inter text-xl font-semibold text-primary-700">{member.data.name}</h3>
                        <p class="font-inter text-base font-medium text-accent-600 mt-1">{member.data.title}</p>
                        <p class="mt-4 font-lora text-base text-surface-900 leading-relaxed max-w-xs mx-auto">
                            {member.data.bio}
                        </p>
                        <a href={member.data.linkedin_url} aria-label={`LinkedIn profile for ${member.data.name}`} target="_blank" rel="noopener noreferrer" class="mt-4 inline-block text-2xl text-primary-300 hover:text-accent-500 transition-colors duration-300">
                            <Icon name="lucide:linkedin" />
                        </a>
                    </div>
                </div>
            ))}
        </div>
    </div>
  </section>

  <!-- Values Section (Pattern 3.2) -->
  <section class="py-24 md:py-32 bg-surface-50">
      <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
          <div class="max-w-3xl mx-auto text-center animate-on-scroll">
              <h2 class="font-inter text-3xl md:text-4xl font-semibold text-primary-700">Our Guiding Principles</h2>
              <p class="mt-4 font-lora text-lg md:text-xl text-surface-900">The values that define our work, our partnerships, and our commitment to quality.</p>
          </div>
          <div class="mt-20 grid max-w-lg mx-auto gap-10 md:max-w-none md:grid-cols-3 md:gap-x-8 md:gap-y-12">
              {values.map((value, index) => (
                  <div class="flex flex-col items-center text-center animate-on-scroll" style={`--delay: ${index * 150}ms;`}>
                      <div class="flex items-center justify-center h-16 w-16 rounded-md bg-primary-700 text-white">
                          <Icon name={value.icon} class="h-8 w-8" />
                      </div>
                      <h3 class="mt-6 font-inter text-xl font-semibold text-primary-700">{value.title}</h3>
                      <p class="mt-2 font-lora text-base text-surface-900 leading-relaxed">{value.description}</p>
                  </div>
              ))}
          </div>
      </div>
  </section>

  <CtaSection />
</BaseLayout>

<script>
    // Scroll-reveal Animation
    const animatedElements = document.querySelectorAll('.animate-on-scroll');
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                // Use a timeout to respect the CSS --delay property
                const delay = parseInt(entry.target.style.getPropertyValue('--delay')) || 0;
                setTimeout(() => {
                    entry.target.classList.add('is-visible');
                }, delay);
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });

    animatedElements.forEach(el => {
        observer.observe(el);
    });
</script>
