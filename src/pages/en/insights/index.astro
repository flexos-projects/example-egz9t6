import { Image } from 'astro:assets';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CtaBanner from '../../../components/patterns/CtaBanner.astro';

const pageTitle = "Digital Strategy Insights for SMEs";
const pageDescription = "Expert articles and guides on custom software, cloud technology, and digital strategy from the team at InnovationHub Solutions.";

// In a real project, this would be:
// const allPosts = await getCollection('posts', ({ id }) => id.startsWith('en/'));
// For this task, we use mock data as content files are not provided.
const allPosts: { slug: string; data: { title: string; summary: string; publish_date: string; featured_image: { src: string; alt: string }; author: string }}[] = [
  {
    slug: 'the-roi-of-digital-transformation',
    data: {
      title: 'The Real ROI of Digital Transformation for the Mittelstand',
      summary: 'Go beyond the buzzwords. We break down the tangible financial and operational benefits of strategic digital investment for established businesses.',
      publish_date: '2024-07-15',
      featured_image: { src: 'https://images.unsplash.com/photo-1556761175-577380e25182?q=80&w=1920&auto=format&fit=crop', alt: 'Business professionals reviewing data on a tablet in a modern office.' },
      author: 'Dr. Anna Müller'
    }
  },
  {
    slug: 'choosing-the-right-tech-stack',
    data: {
      title: 'How to Choose the Right Tech Stack for Your Custom Application',
      summary: 'A non-technical guide for decision-makers on the key factors to consider when selecting the technology that will power your business.',
      publish_date: '2024-06-28',
      featured_image: { src: 'https://images.unsplash.com/photo-1542744173-8e7e53415bb0?q=80&w=1920&auto=format&fit=crop', alt: 'A team collaborating around a whiteboard with sticky notes.' },
      author: 'Markus Schmidt'
    }
  },
  {
    slug: 'agile-methodology-for-smes',
    data: {
      title: 'Beyond the Sprint: Making Agile Methodology Work for SMEs',
      summary: 'Agile isn\'t just for startups. Learn how we adapt agile principles to ensure transparency, flexibility, and on-time delivery for established businesses.',
      publish_date: '2024-06-12',
      featured_image: { src: 'https://images.unsplash.com/photo-1517048676732-d65bc937f952?q=80&w=1920&auto=format&fit=crop', alt: 'A diverse group of professionals in a meeting.' },
      author: 'Lena Meyer'
    }
  },
   {
    slug: 'cloud-migration-pitfalls',
    data: {
      title: '3 Common Pitfalls to Avoid in Your Cloud Migration Strategy',
      summary: 'Migrating to the cloud can be transformative, but costly mistakes are common. Here’s how to avoid them and ensure a smooth, secure transition.',
      publish_date: '2024-05-22',
      featured_image: { src: 'https://images.unsplash.com/photo-1544890225-2fde0e66ea9c?q=80&w=1920&auto=format&fit=crop', alt: 'Server racks in a data center.' },
      author: 'Markus Schmidt'
    }
  }
].sort((a, b) => new Date(b.data.publish_date).valueOf() - new Date(a.data.publish_date).valueOf());

const featuredPost = allPosts[0];
const otherPosts = allPosts.slice(1);

const formatDate = (dateStr: string) => {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
