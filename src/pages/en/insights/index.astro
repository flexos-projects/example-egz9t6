<BaseLayout title={pageTitle} description={pageDescription}>
  <main>
    <!-- Minimal Hero (Pattern 2.3) -->
    <section class="py-24 md:py-32 bg-surface-50 text-center">
      <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
        <div class="max-w-3xl mx-auto animate-on-scroll">
          <h1 class="font-inter text-4xl md:text-5xl lg:text-6xl font-semibold leading-tight text-primary-700 mb-4">
            Insights & Perspectives
          </h1>
          <p class="font-lora text-lg md:text-xl text-surface-900 opacity-90 mb-8">
            {pageDescription}
          </p>
        </div>
      </div>
    </section>

    <!-- Featured Article Section -->
    <section class="pb-16 md:pb-24 bg-surface-50">
      <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
        {featuredPost && (
          <div class="max-w-4xl mx-auto">
            <a href={`/en/insights/${featuredPost.slug}/`} class="group block bg-surface-50 rounded-md shadow-md transition-all duration-300 ease-in-out hover:shadow-xl hover:-translate-y-1 animate-on-scroll">
              <div class="relative w-full overflow-hidden pt-[56.25%] rounded-t-md">
                <Image 
                  src={featuredPost.data.featured_image.src}
                  alt={featuredPost.data.featured_image.alt}
                  class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105"
                  widths={[400, 800, 1200]}
                  sizes="(max-width: 768px) 100vw, 800px"
                  loading="eager"
                />
              </div>
              <div class="p-6 md:p-8">
                <p class="font-inter text-sm text-surface-900/60 mb-2">{formatDate(featuredPost.data.publish_date)}</p>
                <h2 class="font-inter text-2xl md:text-3xl font-semibold text-primary-700 mb-3 group-hover:text-accent-700 transition-colors duration-300 ease-in-out">
                  {featuredPost.data.title}
                </h2>
                <p class="font-lora text-base text-surface-900 mb-6">
                  {featuredPost.data.summary}
                </p>
                <span class="font-inter text-accent-500 group-hover:text-accent-600 font-medium text-sm transition-colors duration-300 ease-in-out">
                  Read More &rarr;
                </span>
              </div>
            </a>
          </div>
        )}
      </div>
    </section>

    <!-- Article Grid Section -->
    {otherPosts.length > 0 && (
      <section class="py-16 md:py-24 lg:py-32 bg-surface-100">
        <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
          <h2 class="font-inter text-3xl md:text-4xl font-semibold text-primary-700 mb-12 text-center animate-on-scroll">More Insights</h2>
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {otherPosts.map((post, index) => (
              <a href={`/en/insights/${post.slug}/`} class="group bg-surface-50 rounded-md shadow-md transition-all duration-300 ease-in-out hover:shadow-lg hover:-translate-y-1 animate-on-scroll" style={`--delay: ${index * 100}ms;`}>
                <div class="relative w-full overflow-hidden pt-[56.25%] rounded-t-md">
                   <Image 
                    src={post.data.featured_image.src}
                    alt={post.data.featured_image.alt}
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105"
                    widths={[400, 600]}
                    sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                    loading="lazy"
                  />
                </div>
                <div class="p-6 flex flex-col">
                  <p class="font-inter text-xs text-surface-900/60 mb-2">{formatDate(post.data.publish_date)}</p>
                  <h3 class="font-inter text-xl font-semibold text-primary-700 mb-2 group-hover:text-accent-700 transition-colors duration-300 ease-in-out flex-grow">
                    {post.data.title}
                  </h3>
                  <p class="font-lora text-base text-surface-900 mb-4">
                    {post.data.summary}
                  </p>
                  <span class="font-inter text-accent-500 group-hover:text-accent-600 font-medium text-sm transition-colors duration-300 ease-in-out mt-auto">
                    Read More &rarr;
                  </span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <CtaBanner />

  </main>
</BaseLayout>

<style>
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(24px); /* translate-y-6 */
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
    transition-delay: var(--delay, 0ms);
  }
  .is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const animatedElements = document.querySelectorAll('.animate-on-scroll');
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            obs.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });

      animatedElements.forEach(el => observer.observe(el));
    } else {
      // Fallback for older browsers
      animatedElements.forEach(el => el.classList.add('is-visible'));
    }
  });
</script>
