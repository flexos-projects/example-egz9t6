```astro
---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CtaBanner from '../../../components/sections/CtaBanner.astro';
import Icon from 'astro-icon';

// Fetch all English services, sorted by frontmatter 'order' property if it exists
const services = (await getCollection('services', ({ id }) => id.startsWith('en/')))
  .sort((a, b) => (a.data.order || 99) - (b.data.order || 99));

const page = {
  title: "Our Services: Custom Apps, Strategy, Cloud | InnovationHub Solutions",
  description: "Explore our B2B IT services, including custom web application development, digital strategy consulting, cloud migration, and e-commerce solutions."
};
---

<BaseLayout title={page.title} description={page.description}>
  
  <!-- Minimal Hero (Pattern 2.3) -->
  <section class="py-24 md:py-32 lg:py-40 bg-surface-50 text-center">
    <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
      <div class="max-w-3xl mx-auto opacity-0" data-animate="fade-in-up">
        <h1 class="font-inter text-4xl md:text-5xl lg:text-6xl font-semibold leading-tight text-primary-700 mb-4">
          Our Services
        </h1>
        <p class="font-lora text-lg md:text-xl text-surface-900 opacity-90 mb-8">
          We translate complex business challenges into tangible, technology-driven solutions. Explore our core areas of expertise designed to foster growth, efficiency, and innovation.
        </p>
      </div>
    </div>
  </section>

  <!-- Service Grid Section (Pattern 1.2 background) -->
  <section class="py-16 md:py-24 lg:py-32 bg-surface-100">
    <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {services.map((service, index) => (
          <!-- Card with Icon/No Image (Pattern 5.2) - adapted as a link block -->
          <a 
            href={`/en/services/${service.slug}/`} 
            class="group bg-surface-50 rounded-md shadow-md p-6 lg:p-8 flex flex-col transition-all duration-300 ease-in-out hover:shadow-xl hover:-translate-y-1 opacity-0"
            data-animate="fade-in-up"
            style={`--delay: ${index * 100}ms;`}
          >
            <div class="mb-4">
              <Icon name={service.data.icon} class="text-accent-500 h-10 w-10" />
            </div>
            <h3 class="font-inter text-xl font-semibold text-primary-700 mb-2">{service.data.title}</h3>
            <p class="font-lora text-base text-surface-900 mb-4 flex-grow">{service.data.summary}</p>
            <span class="font-inter text-accent-500 group-hover:text-accent-600 font-medium text-sm transition-colors duration-300 ease-in-out self-start">
              Learn More &rarr;
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner (Pattern 3.5) -->
  <CtaBanner
    headline="Have a Project in Mind?"
    subtext="Let's discuss how our expertise can drive your next success story. Schedule a complimentary consultation with one of our senior partners today."
    buttonText="Schedule a Consultation"
    buttonUrl="/en/contact"
  />

</BaseLayout>
```