/**
 * Section Component
 * 
 * A reusable wrapper for creating consistent, well-padded page sections.
 * It handles the outer padding and background color, and an inner container
 * for max-width and horizontal content padding.
 * 
 * This component implements the "Section Wrapper" pattern from the design system.
 * 
 * @prop {string} [variant='standard'] - The visual style of the section.
 *   - 'standard': Default white background with generous padding.
 *   - 'alternating': Light gray background for creating visual rhythm.
 *   - 'prominent': Dark primary background with white text for high-impact sections like CTAs.
 * @prop {string} [class] - Optional additional CSS classes to apply to the <section> element.
 * @prop {string} [id] - Optional ID to apply to the <section> element for anchor linking.
 */
import { cva, type VariantProps } from 'class-variance-authority';

const section = cva('', {
  variants: {
    variant: {
      standard: 'bg-surface-50 text-surface-900 py-16 md:py-24 lg:py-32',
      alternating: 'bg-surface-100 text-surface-900 py-16 md:py-20 lg:py-28',
      prominent: 'bg-primary-700 text-white py-20 md:py-28 lg:py-36',
    },
  },
  defaultVariants: {
    variant: 'standard',
  },
});

interface Props extends VariantProps<typeof section> {
  class?: string;
  id?: string;
}

const { variant, class: className, id } = Astro.props;
---

<section id={id} class:list={[section({ variant }), className]}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8 lg:px-12">
    <slot />
  </div>
</section>
