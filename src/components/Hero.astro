```astro
---
import { Image } from 'astro:assets';

interface Props {
  variant?: 'impact' | 'split' | 'minimal';
  backgroundImage?: ImageMetadata | string;
  imageSide?: 'left' | 'right';
  class?: string;
}

const {
  variant = 'minimal',
  backgroundImage,
  imageSide = 'left',
  class: className,
} = Astro.props;
---

{/* VARIANT 2.1: Impact Hero (Full-Viewport, Bold Typography) */}
{variant === 'impact' && (
  <section
    class:list={[
      "relative h-screen bg-cover bg-center text-white flex items-center",
      className
    ]}
    style={backgroundImage ? `background-image: url(${typeof backgroundImage === 'string' ? backgroundImage : backgroundImage.src})` : ''}
  >
    <div class="absolute inset-0 bg-primary-800/70"></div>
    <div class="relative z-10 w-full">
      <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
        <div class="max-w-4xl text-center sm:text-left">
          <div class="animate-hero-content">
            <slot name="headline" />
          </div>
          <div class="animate-hero-content" style="--delay: 200ms;">
            <slot name="subtext" />
          </div>
          <div class="animate-hero-content" style="--delay: 400ms;">
            <slot name="actions" />
          </div>
        </div>
      </div>
    </div>
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-hero-content" style="--delay: 600ms;">
      <svg class="w-6 h-6 text-white animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg>
    </div>
  </section>
)}

{/* VARIANT 2.2: Split Hero (Image/Content Side-by-Side) */}
{variant === 'split' && (
  <section class:list={["py-20 md:py-28 lg:py-36 bg-surface-50", className]}>
    <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
      <div class="grid md:grid-cols-2 items-center gap-12 md:gap-16">
        <div class:list={[
          "opacity-0 translate-y-6 motion-safe:animate-[fade-in-up_700ms_ease-out_forwards]",
          { 'md:order-last': imageSide === 'left' }
        ]}>
          <slot name="image" />
        </div>
        <div class="opacity-0 translate-y-6 motion-safe:animate-[fade-in-up_700ms_ease-out_forwards_200ms]">
          <slot name="headline" />
          <slot name="subtext" />
          <slot name="actions" />
        </div>
      </div>
    </div>
  </section>
)}

{/* VARIANT 2.3: Minimal Hero (Text-Centered on Solid Background) */}
{variant === 'minimal' && (
  <section class:list={["py-24 md:py-32 lg:py-40 bg-surface-50", className]}>
    <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
      <div class="max-w-3xl mx-auto text-center opacity-0 translate-y-6 motion-safe:animate-[fade-in-up_700ms_ease-out_forwards]">
        <slot name="headline" />
        <slot name="subtext" />
        <slot name="actions" />
      </div>
    </div>
  </section>
)}

<style>
  @keyframes fade-in-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-hero-content {
    animation: fade-in-up 700ms ease-out forwards;
    opacity: 0;
    animation-delay: var(--delay, 0ms);
  }
</style>
